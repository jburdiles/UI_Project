{
    "name": "CSV Processor",
    "description": "Automation that processes CSV files, filters data according to specific criteria and generates a consolidated report.",
    "inputs": [
        {
            "id": "input_csv",
            "label": "Input CSV file",
            "type": "file",
            "required": true,
            "filters": "CSV Files (*.csv);;All Files (*)"
        },
        {
            "id": "output_folder",
            "label": "Output folder",
            "type": "folder",
            "required": true
        },
        {
            "id": "config_file",
            "label": "Configuration file (optional)",
            "type": "file",
            "required": false,
            "filters": "JSON Files (*.json);;All Files (*)"
        }
    ]
}