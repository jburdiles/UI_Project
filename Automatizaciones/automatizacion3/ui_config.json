{
    "name": "File Backup",
    "description": "Automation that creates backups of important files and folders, with compression and timestamp.",
    "inputs": [
        {
            "id": "source_folder",
            "label": "Source folder for backup",
            "type": "folder",
            "required": true
        },
        {
            "id": "backup_folder",
            "label": "Backup destination folder",
            "type": "folder",
            "required": true
        },
        {
            "id": "exclude_file",
            "label": "File with patterns to exclude",
            "type": "file",
            "required": false,
            "filters": "Text Files (*.txt);;All Files (*)"
        }
    ]
}